<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SettingsFragment">

    <!-- Fake toolbar for fragment (looks like a real one) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_primary"
        app:title="Settings"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- IP Address Input -->
    <EditText
        android:id="@+id/ipInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Server IP (e.g. 10.0.2.2)"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/custom_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_marginTop="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save IP"
        android:backgroundTint="@color/green_primary"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/ipInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Notification Settings Title -->
    <TextView
        android:id="@+id/notificationSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/saveBtn"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Distraction Alerts Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchDistractionAlerts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Distraction Alerts"
        android:textColor="@color/text_primary"
        android:checked="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/notificationSettingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Break Reminders Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchBreakReminders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Break Reminders"
        android:textColor="@color/text_primary"
        android:checked="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/switchDistractionAlerts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Achievement Notifications Switch -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchAchievements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Achievement Notifications"
        android:textColor="@color/text_primary"
        android:checked="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/switchBreakReminders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/rounded_button_red"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/switchAchievements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
