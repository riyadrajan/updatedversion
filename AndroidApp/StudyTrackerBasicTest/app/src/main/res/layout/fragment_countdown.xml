<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:paddingBottom="80dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Timer"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Circular Timer Display -->
        <androidx.cardview.widget.CardView
            android:id="@+id/timerCard"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="140dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/titleCountdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/timerDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25:00"
                    android:textSize="56sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_primary"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/timerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="minutes"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_below="@id/timerDisplay"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quick Presets -->
        <TextView
            android:id="@+id/presetsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Presets"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/timerCard"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/presetButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/presetsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/preset25"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="25"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/green_primary"
                android:textColor="#333333"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/preset45"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="45"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/green_primary"
                android:textColor="#333333"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/preset60"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="60"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/green_primary"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Custom Duration - Compact Inline -->
        <LinearLayout
            android:id="@+id/customTimeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:background="#F5F5F5"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/presetButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginEnd="16dp" />

            <NumberPicker
                android:id="@+id/minPicker"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:theme="@style/NumberPickerStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minutes"
                android:textColor="#333333"
                android:layout_marginStart="8dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Start Button -->
        <Button
            android:id="@+id/startCountdownBtn"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="Start Focus Session"
            android:textStyle="bold"
            android:textSize="18sp"
            android:backgroundTint="@color/green_primary"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/customTimeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
