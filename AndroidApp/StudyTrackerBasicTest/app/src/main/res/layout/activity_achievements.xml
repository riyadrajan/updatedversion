<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_primary"
        app:titleTextColor="#FFFFFF"
        android:elevation="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Achievements"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="24dp"/>

            <!-- Achievement 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/achievement1Icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/star_big_on"
                        android:tint="#FFD700"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/achievement1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Steps"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/achievement1Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete your first study session"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/achievement1Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Locked"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Achievement 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/achievement2Icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/star_big_on"
                        android:tint="#FFD700"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/achievement2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Getting Started"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/achievement2Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Complete 5 study sessions"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/achievement2Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Locked"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Achievement 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/achievement3Icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/star_big_on"
                        android:tint="#FFD700"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/achievement3Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Master"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/achievement3Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Study for 10 total hours"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/achievement3Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Locked"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Achievement 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/achievement4Icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/star_big_on"
                        android:tint="#FFD700"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/achievement4Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Study Legend"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/achievement4Desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Study for 50 total hours"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:id="@+id/achievement4Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Locked"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
